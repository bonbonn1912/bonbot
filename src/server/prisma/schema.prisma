generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_POSTGRES_URL")
}

model User {
  userId       Int       @id @default(autoincrement())
  username     String?   @unique @db.VarChar(255)
  registeredAt DateTime? @default(now()) @db.Timestamp(6)
  updatedAt    DateTime? @default(now()) @db.Timestamp(6)
  isActive     Boolean
  isAdmin      Boolean
  isBotConnected Boolean
  description  String?   @db.VarChar(500)
  commands Commands[]
}

	model Commands {
  commandId   Int       @id @default(autoincrement())
  trigger     String    @db.VarChar(35)
  value       String    @db.VarChar(500)
  registeredAt DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  isActive    Boolean
  count       Int
  streamerId  Int       // Fremdschl√ºssel auf die User-Tabelle
  user        User      @relation(fields: [streamerId], references: [userId])
  intervall Int
  isRepetitive Boolean
}